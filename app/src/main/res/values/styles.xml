<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LogoItem">
        <item name="fontFamily">@font/days2</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grayDark3</item>
        <item name="android:textSize" tools:ignore="SpUsage">70dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/logo_item_background</item>
    </style>

    <style name="ButtonStyleTextColor">
        <item name="colorPrimary">@color/green3</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
    </style>

    <style name="MaterialButtonStyle.MainMenuButton">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="MyEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="ChipPlayer" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

</resources>